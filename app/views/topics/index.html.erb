<div class="container">
  <div class="wrapper col-md-6 col-md-offset-1 col-sm-10">
    <p><%= notice %></p>

    <%= link_to "新規作成",new_topic_path,class: 'btn btn-primary'%>
　　　　　　　　　　　　　　　　　　　　　　　　　　　　　　
    <h1>トピック一覧</h1>

     <% @topics.each do |topic| %>
     <div class="row">
      <p class = "picture"><%= profile_img(topic.user)%></p>
      <h3><strong><%= topic.user.name %></strong></h3>
       <h3><strong><%= link_to topic_path(topic) do %>「<%= topic.title %>」</strong></h3>
      <% end %>
      <% if current_user.id == topic.user.id %>
        <%= link_to "トピックを編集する",edit_topic_path(topic.id),class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to"トピックを削除する",topic_path(topic.id), method: :delete,data: { confirm: '本当に編集していいですか？' },class: 'btn btn-default btn-sm btn btn-danger'  %>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
