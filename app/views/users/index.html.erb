<div class="container">
  <p class = "user-index">~ユーザー一覧~</p>
  <% @users.each do |user| %>
      <div class="container-child col-md-3 col-sm-4 col-xs-6 ">
        <%= link_to user_path(user) do %>
         <h4 class = "picture"><strong><%= profile_img(user) %></strong></h4>
        <% end %>
        <%= user.email %>
        <%= render 'follow_form', user: user %><br>
         <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post',class: 'btn btn-default btn-sm btn-success'%>
      </div>
  <% end %>
</div>
